cabal-version:      3.0

name:               csv
version:            0.9.0
description:        Example project to read from a CSV file using Attoparsec.
synopsis:           example to read from csv file
homepage:           https://github.com/frankhjung/haskell-csv#readme
bug-reports:        https://github.com/frankhjung/haskell-csv/issues
license:            GPL-3.0-only
license-file:       LICENSE
author:             Frank H Jung
maintainer:         frankhjung at linux dot com
copyright:          Copyright Â© 2017-2023 Frank H Jung
category:           education
build-type:         Simple
extra-source-files: README.md

source-repository   head
  type:             git
  location:         git@github.com:frankhjung/haskell-csv.git

library
  exposed-modules:  Lib
  hs-source-dirs:   src
  ghc-options:      -Wall -Wcompat -Widentities -Wincomplete-record-updates
                    -Wincomplete-uni-patterns -Wmissing-export-lists
                    -Wmissing-home-modules -Wpartial-fields
                    -Wredundant-constraints
  default-language: Haskell2010
  build-depends:    attoparsec
                  , base >= 4 && < 5
                  , text
                  , time

executable          main
  main-is:          Main.hs
  other-modules:    Lib
  hs-source-dirs:   app
                  , src
  ghc-options:      -Wall -Wcompat -Widentities -Wincomplete-record-updates
                    -Wincomplete-uni-patterns -Wmissing-export-lists
                    -Wmissing-home-modules -Wpartial-fields
                    -Wredundant-constraints -threaded -rtsopts
                    -with-rtsopts=-N
  default-language: Haskell2010
  build-depends:    attoparsec
                  , base
                  , fmt
                  , text
                  , time

test-suite          test
  main-is:          Spec.hs
  other-modules:    Lib
  hs-source-dirs:   test
                  , src
  ghc-options:      -Wall -Wcompat -Widentities -Wincomplete-record-updates
                    -Wincomplete-uni-patterns -Wmissing-export-lists
                    -Wmissing-home-modules -Wpartial-fields
                    -Wredundant-constraints -threaded -rtsopts
                    -with-rtsopts=-N
  type:             exitcode-stdio-1.0
  default-language: Haskell2010
  build-depends:    attoparsec
                  , base
                  , hspec
                  , text
                  , time

