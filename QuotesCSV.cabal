name:                 QuotesCSV
version:              0.4.0
synopsis:             read from csv
description:          Example project to read from a CSV file using Attoparsec.
homepage:             https://github.com/frankhjung/haskell-csv#readme
license:              GPL-3
license-file:         LICENSE
author:               Frank H Jung
maintainer:           frankhjung@linux.com
copyright:            Copyright Â© 2017-2021 Frank H Jung
category:             education
build-type:           Simple
cabal-version:        >=1.10
extra-source-files:   README.md

source-repository     head
  type:               git
  location:           git@github.com:frankhjung/haskell-csv.git

library
  default-language:   Haskell2010
  hs-source-dirs:     src
  exposed-modules:    QuotesCSV
  build-depends:      attoparsec
                    , base
                    , text
                    , time
  ghc-options:       -Wall

executable            main
  hs-source-dirs:     app
  main-is:            Main.hs
  default-language:   Haskell2010
  build-depends:      base
                    , QuotesCSV
                    , text
  ghc-options:       -Wall -threaded

test-suite            test
  hs-source-dirs:     test
  main-is:            Spec.hs
  default-language:   Haskell2010
  type:               exitcode-stdio-1.0
  build-depends:      base
                    , QuotesCSV
                    , hspec
                    , text
                    , time
  ghc-options:       -Wall -threaded

